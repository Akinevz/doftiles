#!/bin/bash

# incoming 
alias sxhkdrc="vim $HOME/.config/sxhkd"
ADDITIONAL_WMRC="$HOME/.config/polybar/config.ini"
#alias bspwmrc="vim $HOME/.config/bspwm"
alias wmrc="vim $HOME/.config/herbstluftwm/autostart -o ${ADDITIONAL_WMRC}"
alias sx="sxhkd"
alias bs="bspwm"
alias aliases="vim $HOME/.config/aliases && source $HOME/.config/aliases"
alias exports="vim $HOME/.config/exports && source $HOME/.config/exports"
alias alisa=aliases
alias rc="vim $HOME/.config/rc"
alias polybar="polybar right & polybar single"

alias ls='ls --color=auto'
alias la='ls -l --color=auto'
alias lal='ls -al --color=auto'
alias l='ls'
alias s='ls -r'

alias please='~/.local/bin/please $(fc -ln -1)'

alias status='git status'
alias commit='git commit'
alias addg='git add'
alias diffg='git diff'

# General
alias v="vim"
alias vv="vim ."

alias plan='vim +set\ ft=todo ~/.plan'
alias adventure='vim "~/adventures/$(date).txt"'
alias today='date;cal'

alias vimrc='vim .vim/vimrc'
alias zshrc="vim $HOME/.zshrc"
alias profile="vim $HOME/.zprofile"

 # 
 # alias s="ls -tr -1h --color=tty"
 # alias sl="ls -r"
 # alias ll="ls -rlAt -1h --color=tty"
 # alias l="ls -tAh -1"
 # 

# Windows
alias explorer="explorer.exe"

# Arch Linux
alias ayy="yay -S"
alias yeet="yay -Rns"
alias hc=herbstclient

# Files
alias cd..="cd .."
alias cp="cp -vi"
alias df=duf||df
alias open=xdg-open

